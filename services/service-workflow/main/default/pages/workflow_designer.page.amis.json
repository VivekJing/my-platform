                    "id": "u:a585ef75560b",
                    "className": "absolute top-0 right-0 bottom-0 w-96 z-10",
                    "title": ""
                },
                {
                    "type": "steedos-react-flow",
                    "id": "u:4dc36cb794c7",
                    "onEvent": {
                        "getInstance": {
                            "weight": 0,
                            "actions": [
                                {
                                    "actionType": "setValue",
                                    "args": {
                                        "value": {
                                            "reactFlowInstance": "${event.data.reactFlowInstance}"
                                        }
                                    },
                                    "componentId": "service_react_flow"
                                }
                            ]
                        },
                        "selectionChange": {
                            "weight": 0,
                            "actions": [
                                {
                                    "actionType": "setValue",
                                    "args": {
                                        "value": {
                                            "reactFlowSelection": "${event.data}"
                                        }
                                    },
                                    "componentId": "service_react_flow"
                                },
                                {
                                    "actionType": "changeActiveKey",
                                    "args": {
                                        "activeKey": 3
                                    },
                                    "componentId": "tabs_react_flow",
                                    "expression": "${event.data.nodes.length || event.data.edges.length}"
                                },
                                {
                                    "actionType": "changeActiveKey",
                                    "args": {
                                        "activeKey": 1
                                    },
                                    "componentId": "tabs_react_flow",
                                    "expression": "${event.data.nodes.length === 0 && event.data.edges.length === 0}"
                                }
                            ]
                        }
                    },
                    "name": "flow_chart",
                    "wrapperClassName": "w-full h-full",
                    "config": "${config}",
                    "visibleOn": "${config.nodes.length}"
                }
            ],
            "className": "w-full h-full",
            "messages": {},
            "api": {
                "url": "/graphql",
                "method": "post",
                "messages": {},
                "requestAdaptor": "debugger;\nconst flowId = api.data.flowId;\napi.data.query = `\n    {\n        data: flows(filters: [\"_id\", \"=\", \"`+ flowId +`\"]){\n            _id, category, form, current,\n                form__expand{\n                    name,\n                    current\n            },\n            _display:_ui{ category }\n        }\n    }\n`;\nreturn api;\n\n",
                "adaptor": "const data = payload.data.data[0];\nlet convertedNodes = [];\nlet convertedEdges = [];\nif (data && data.current && data.current.steps && data.current.steps.length) {\n  data.current.steps.forEach(function (step) {\n    var type;\n    if (step.step_type == \"start\") {\n      type = \"input\";\n    }\n    else if (step.step_type == \"end\") {\n      type = \"output\";\n    }\n    convertedNodes.push({\n      id: step._id,\n      type: type,\n      position: {\n        x: step.posx,\n        y: step.posy\n      },\n      data: {\n        label: step.name,\n        ...step\n      }\n    });\n    if (step.lines) {\n      step.lines.forEach(function (line) {\n        convertedEdges.push({\n          id: line._id,\n          label: line.name,\n          source: step._id,\n          target: line.to_step,\n          data: {\n            ...line\n          }\n        });\n      });\n    }\n  });\n}\nlet convertedConfigData = {\n  nodes: convertedNodes,\n  edges: convertedEdges\n};\nreturn {\n  \"status\": 0,\n  \"msg\": \"\",\n  \"data\": {\n    \"config\": convertedConfigData\n  }\n}",
                "dataType": "json"
            },
            "data__": {
                "config": {
                    "edges": [
                        {
                            "id": "start-end",
                            "source": "start",
                            "target": "end",
                            "label": ""
                        }
